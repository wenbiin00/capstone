# AEWRS Backend Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aewrs_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# For Production (Cloud Database):
# DATABASE_URL=postgresql://user:password@host:port/database

# Firebase Admin SDK
# Place your firebase-admin-key.json in the root directory
FIREBASE_PROJECT_ID=aewrs-c04a4

# RFID/Arduino Configuration
SERIAL_PORT=COM3
SERIAL_BAUD_RATE=9600

# Security
JWT_SECRET=your-secret-key-change-this-in-production

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://192.168.68.60:3000

# Low Stock Threshold (default)
DEFAULT_LOW_STOCK_THRESHOLD=5

# Transaction Defaults
DEFAULT_BORROW_DAYS=7
